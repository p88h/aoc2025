{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Odin Program",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/out/aoc2025",
            "args": ["${fileBasenameNoExtension}", "debug"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "odin: build debug"
        },
        {
            "name": "Run Odin Program",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/out/aoc2025",
            "args": ["${fileBasenameNoExtension}"],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "odin: build"
        }
    ],
    "inputs": [
        {
            "id": "day",
            "type": "promptString",
            "description": "Enter the day number to debug",
            "default": "1"
        }
    ]
}
